# Django Settings
DJANGO_SECRET_KEY=your-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Cloud Run (set automatically after first deploy)
# CLOUD_RUN_SERVICE_URL=https://trip-planner-xxxxx-uc.a.run.app

# Database (optional - defaults to SQLite)
# DATABASE_URL=postgres://user:password@localhost:5432/trip_planner

# Redis Cache (optional - uses DB cache if not set)
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# API Keys
# ===========================================

# Google Gemini AI (required for AI features)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# OpenWeather API (optional - uses stub data if not set)
OPENWEATHER_API_KEY=your-openweather-api-key

# Google Places API (optional - uses stub data if not set)
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Google Distance Matrix API (optional - uses fallback if not set)
DISTANCE_MATRIX_API_KEY=your-distance-matrix-api-key

# Currency Exchange API (optional - uses 1:1 rate if not set)
CURRENCY_API_KEY=your-currency-api-key

# ===========================================
# Cache TTLs (in seconds)
# ===========================================
CACHE_TTL_WEATHER=3600      # 1 hour
CACHE_TTL_PLACES=86400      # 24 hours
CACHE_TTL_TRAVEL=3600       # 1 hour
CACHE_TTL_CURRENCY=43200    # 12 hours

# Planner Configuration
PLANNER_BUFFER_MINUTES=20
